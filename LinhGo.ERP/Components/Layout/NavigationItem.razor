@using LinhGo.ERP.Core.Models
@inject NavigationManager navigationManager;
@if (!Menu.New && !Menu.Updated && !Menu.Pro)
{
    <RadzenPanelMenuItem @bind-Expanded=@Menu.Expanded Text="@Menu.Title" Path="@GetUrl()" Icon="@Menu.Icon" aria-label="@Menu.Name" ChildContent=@ChildContent />
}
else
{
    <RadzenPanelMenuItem @bind-Expanded=@Menu.Expanded Text="@Menu.Title" Path="@GetUrl()" Icon="@Menu.Icon" aria-label="@Menu.Name" ChildContent="@ChildContent">
        <Template>
            @Menu.Name
            <RadzenBadge Text="Updated" Visible=@Menu.Updated BadgeStyle="BadgeStyle.Info"/>
            <RadzenBadge Text="New" Visible=@Menu.New BadgeStyle="BadgeStyle.Success"/>
            <RadzenBadge Text="Pro" Visible=@Menu.Pro BadgeStyle="BadgeStyle.Danger"/>
        </Template>
    </RadzenPanelMenuItem>
}
@code {
    [Parameter]
    public  PanelMenu Menu { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    string GetUrl()
    {
        return $"{Menu.Path}{new Uri(navigationManager.Uri).Query}";
    }
}