            </div>
        </div>
    }
</div>

@code {
    private string _currentCulture = "en-US";
    private bool _showDropdown = false;

    protected override void OnInitialized()
    {
        // Get current culture from cookie or default
        var culture = CultureInfo.CurrentCulture.Name;
        _currentCulture = culture == "vi-VN" ? "vi-VN" : "en-US";
    }

    private string GetCurrentFlag()
    {
        return _currentCulture == "vi-VN" ? "ðŸ‡»ðŸ‡³" : "ðŸ‡ºðŸ‡¸";
    }

    private string GetTooltip()
    {
        return _currentCulture == "vi-VN" ? "NgÃ´n ngá»¯" : "Language";
    }

    private void ToggleDropdown()
    {
        _showDropdown = !_showDropdown;
    }

    private void ChangeLanguage(string culture)
    {
        if (culture != CultureInfo.CurrentCulture.Name)
        {
            var uri = new Uri(Navigation.Uri).GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);
            var cultureEscaped = Uri.EscapeDataString(culture);
            var uriEscaped = Uri.EscapeDataString(uri);
            
            // Use CultureController to set culture and redirect
            Navigation.NavigateTo($"/Culture/Set?culture={cultureEscaped}&redirectUri={uriEscaped}", forceLoad: true);
        }
    }
}


