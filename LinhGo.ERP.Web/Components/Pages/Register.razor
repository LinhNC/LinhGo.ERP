@page "/register"
@layout AuthLayout
@using System.ComponentModel.DataAnnotations
@using LinhGo.ERP.Web.Components.Shared
@using Microsoft.Extensions.Localization
@using LinhGo.ERP.Web.Resources
@inject NavigationManager NavigationManager
@inject NotificationService NotificationService
@inject IStringLocalizer<SharedResource> Localizer

<PageTitle>@Localizer["RegisterPageTitle"]</PageTitle>

<style>
    /* Main Container - Split Screen Design */
    .register-wrapper {
        min-height: 100vh;
        display: flex;
        background: #f8fafc;
    }
    
    /* Left Side - Branding & Info */
    .register-brand-section {
        flex: 1;
        background: var(--rz-primary);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 4rem 3rem;
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .register-brand-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 15s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.1); opacity: 0.3; }
    }
    
    .brand-content {
        position: relative;
        z-index: 1;
        text-align: center;
        max-width: 500px;
    }
    
    .brand-logo {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }
    
    .brand-logo i {
        font-size: 3rem;
        color: white;
    }
    
    .brand-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 0 2px 20px rgba(0,0,0,0.2);
    }
    
    .brand-subtitle {
        font-size: 1.125rem;
        opacity: 0.95;
        line-height: 1.6;
        margin-bottom: 2rem;
    }
    
    .brand-features {
        display: grid;
        gap: 1rem;
        text-align: left;
        margin-top: 3rem;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        backdrop-filter: blur(10px);
    }
    
    .feature-icon {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    
    /* Right Side - Login Form */
    .register-form-section {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem;
        background: #ffffff;
        position: relative;
    }
    
    .language-switcher {
        position: absolute;
        top: 2rem;
        right: 2rem;
        z-index: 10;
    }
    
    .register-form-container {
        width: 100%;
        max-width: 600px;
    }
    
    .form-header {
        margin-bottom: 2rem;
    }
    
    .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }
    
    .form-subtitle {
        font-size: 1rem;
        color: #64748b;
    }
    
    .register-form {
        margin-top: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.25rem;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    
    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: #334155;
        margin-bottom: 0.5rem;
    }
    
    .form-input {
        width: 100%;
        min-height: 44px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        transition: all 0.2s;
        background: #f8fafc;
    }
    
    .form-input:focus {
        outline: none;
        border-color: var(--rz-primary);
        background: #ffffff;
        box-shadow: 0 0 0 3px var(--rz-primary-lighter);
    }
    
    .checkbox-wrapper {
        display: flex;
        align-items: start;
        gap: 0.75rem;
        margin: 1.5rem 0;
    }
    
    .checkbox-wrapper label {
        font-size: 0.875rem;
        color: #475569;
        cursor: pointer;
        line-height: 1.5;
    }
    
    .submit-button {
        width: 100%;
        min-height: 52px;
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        background: var(--rz-primary);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .submit-button:hover:not(:disabled) {
        background: var(--rz-primary-dark);
        transform: translateY(-1px);
        box-shadow: 0 4px 15px var(--rz-primary-lighter);
    }
    
    .submit-button:active:not(:disabled) {
        transform: translateY(0);
        box-shadow: 0 6px 20px var(--rz-primary-light);
    }
    
    .submit-button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
    
    .spinner {
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }
    
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: #94a3b8;
        font-size: 0.875rem;
    }
    
    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: #e2e8f0;
    }
    
    .divider span {
        padding: 0 1rem;
    }
    
    .social-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .social-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        min-height: 48px;
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: #334155;
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .social-button:hover {
        border-color: var(--rz-primary);
        color: var(--rz-primary);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transform: translateY(-1px);
    }
    
    .social-button svg {
        flex-shrink: 0;
    }
    
    .signin-prompt {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e2e8f0;
        color: #64748b;
    }
    
    /* Responsive Design */
    @@media (max-width: 1024px) {
        .register-brand-section {
            display: none;
        }
        
        .register-form-section {
            flex: 1;
        }
    }
    
    @@media (max-width: 640px) {
        .register-form-section {
            padding: 2rem 1.5rem;
        }
        
        .form-title {
            font-size: 1.5rem;
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
        
        .social-buttons {
            grid-template-columns: 1fr;
        }
        
        .language-switcher {
            top: 1rem;
            right: 1rem;
        }
    }
</style>

<div class="register-wrapper">
    <!-- Left Side - Branding -->
    <div class="register-brand-section">
        <div class="brand-content">
            <div class="brand-logo">
                <i class="fas fa-user-plus"></i>
            </div>
            
            <h1 class="brand-title">@Localizer["BrandTitle"]</h1>
            <p class="brand-subtitle">
                @Localizer["BrandSubtitle"]
            </p>
            
            <div class="brand-features">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <strong>@Localizer["FeatureQuickSetupTitle"]</strong><br/>
                        @Localizer["FeatureQuickSetupDescription"]
                    </div>
                </div>
                
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <strong>@Localizer["FeatureTeamCollaborationTitle"]</strong><br/>
                        @Localizer["FeatureTeamCollaborationDescription"]
                    </div>
                </div>
                
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <div>
                        <strong>@Localizer["Feature24SupportTitle"]</strong><br/>
                        @Localizer["Feature24SupportDescription"]
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right Side - Register Form -->
    <div class="register-form-section">
        <!-- Language Switcher - Top Right -->
        <div class="language-switcher">
            <LanguageSwitcher />
        </div>
        
        <div class="register-form-container">
            <div class="form-header">
                <h2 class="form-title">@Localizer["RegisterTitle"]</h2>
                <p class="form-subtitle">@Localizer["RegisterSubtitle"]</p>
            </div>
            
            <form method="post" @onsubmit="OnSubmit" @onsubmit:preventDefault="true" class="register-form">
                <!-- Name Fields -->
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">@Localizer["FirstNameLabel"]</label>
                        <input type="text" 
                               name="firstName" 
                               class="form-input" 
                               placeholder="@Localizer["FirstNamePlaceholder"]"
                               @bind="_firstName"
                               required 
                               autocomplete="given-name" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">@Localizer["LastNameLabel"]</label>
                        <input type="text" 
                               name="lastName" 
                               class="form-input" 
                               placeholder="@Localizer["LastNamePlaceholder"]"
                               @bind="_lastName"
                               required 
                               autocomplete="family-name" />
                    </div>
                </div>

                <!-- Email Field -->
                <div class="form-group">
                    <label class="form-label">@Localizer["EmailLabel"]</label>
                    <input type="email" 
                           name="email" 
                           class="form-input" 
                           placeholder="@Localizer["EmailPlaceholder"]"
                           @bind="_email"
                           required 
                           autocomplete="email" />
                </div>

                <!-- Company Name -->
                <div class="form-group">
                    <label class="form-label">@Localizer["CompanyNameLabel"]</label>
                    <input type="text" 
                           name="companyName" 
                           class="form-input" 
                           placeholder="@Localizer["CompanyNamePlaceholder"]"
                           @bind="_companyName"
                           required 
                           autocomplete="organization" />
                </div>

                <!-- Password Fields -->
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">@Localizer["PasswordLabel"]</label>
                        <input type="password" 
                               name="password" 
                               class="form-input" 
                               placeholder="@Localizer["PasswordPlaceholder"]"
                               @bind="_password"
                               required 
                               minlength="6"
                               autocomplete="new-password" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">@Localizer["ConfirmPasswordLabel"]</label>
                        <input type="password" 
                               name="confirmPassword" 
                               class="form-input" 
                               placeholder="@Localizer["ConfirmPasswordPlaceholder"]"
                               @bind="_confirmPassword"
                               required 
                               autocomplete="new-password" />
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div class="checkbox-wrapper">
                    <input type="checkbox" 
                           name="acceptTerms" 
                           id="acceptTerms"
                           @bind="_acceptTerms"
                           required />
                    <label for="acceptTerms">@Localizer["AgreeToTerms"]</label>
                </div>

                <!-- Register Button -->
                <button type="submit" class="submit-button" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner"></span>
                    }
                    else
                    {
                        <i class="fas fa-user-plus" style="font-size: 1.25rem;"></i>
                    }
                    <span>@Localizer["SignUpButton"]</span>
                </button>
            </form>
            
            <div class="divider">
                <span>@Localizer["OrContinueWith"]</span>
            </div>
            
            <div class="social-buttons">
                <button type="button" class="social-button" @onclick='() => OnSocialRegister("Google")'>
                    <svg width="20" height="20" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>@Localizer["Google"]</span>
                </button>
                
                <button type="button" class="social-button" @onclick='() => OnSocialRegister("LinkedIn")'>
                    <svg width="20" height="20" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    <span>@Localizer["LinkedIn"]</span>
                </button>
            </div>
            
            <div class="signin-prompt">
                @Localizer["AlreadyHaveAccount"] <a href="/login" style="color: var(--rz-primary); font-weight: 600; text-decoration: none;">@Localizer["SignInLink"]</a>
            </div>
        </div>
    </div>
</div>

@code {
    private string _firstName = string.Empty;
    private string _lastName = string.Empty;
    private string _email = string.Empty;
    private string _companyName = string.Empty;
    private string _password = string.Empty;
    private string _confirmPassword = string.Empty;
    private bool _acceptTerms = false;
    private bool _isLoading = false;

    private async Task OnSubmit()
    {
        // Basic validation
        if (string.IsNullOrWhiteSpace(_firstName) || string.IsNullOrWhiteSpace(_lastName) ||
            string.IsNullOrWhiteSpace(_email) || string.IsNullOrWhiteSpace(_companyName) ||
            string.IsNullOrWhiteSpace(_password) || string.IsNullOrWhiteSpace(_confirmPassword))
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Warning,
                Summary = "Validation Error",
                Detail = "Please fill in all required fields",
                Duration = 3000
            });
            return;
        }

        if (_password != _confirmPassword)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Warning,
                Summary = "Validation Error",
                Detail = "Passwords do not match",
                Duration = 3000
            });
            return;
        }

        if (!_acceptTerms)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Warning,
                Summary = "Validation Error",
                Detail = "You must accept the terms and conditions",
                Duration = 3000
            });
            return;
        }

        _isLoading = true;
        StateHasChanged();

        try
        {
            // Simulate API call
            await Task.Delay(2000);

            // TODO: Call your registration API here
            // var result = await AuthService.RegisterAsync(new RegisterRequest { 
            //     FirstName = _firstName,
            //     LastName = _lastName,
            //     Email = _email,
            //     CompanyName = _companyName,
            //     Password = _password
            // });

            // For demo purposes, show success
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Success,
                Summary = "Registration Successful",
                Detail = $"Welcome, {_firstName}! Please check your email to verify your account.",
                Duration = 5000
            });

            // Redirect to login after successful registration
            await Task.Delay(1000);
            NavigationManager.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Registration Failed",
                Detail = ex.Message,
                Duration = 4000
            });
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void OnSocialRegister(string provider)
    {
        NotificationService.Notify(new NotificationMessage
        {
            Severity = NotificationSeverity.Info,
            Summary = $"{provider} Registration",
            Detail = $"Redirecting to {provider} authentication...",
            Duration = 3000
        });

        // TODO: Implement social registration
