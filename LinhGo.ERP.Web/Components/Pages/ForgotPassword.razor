@page "/forgot-password"
@layout AuthLayout
@using System.ComponentModel.DataAnnotations
@using LinhGo.ERP.Web.Components.Shared
@using Microsoft.Extensions.Localization
@using LinhGo.ERP.Web.Resources
@inject NavigationManager NavigationManager
@inject NotificationService NotificationService
@inject IStringLocalizer<SharedResource> Localizer

<PageTitle>@Localizer["ForgotPasswordPageTitle"]</PageTitle>

<style>
    /* Main Container - Split Screen Design */
    .forgot-wrapper {
        min-height: 100vh;
        display: flex;
        background: #f8fafc;
    }
    
    /* Left Side - Branding & Info */
    .forgot-brand-section {
        flex: 1;
        background: var(--rz-primary);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 4rem 3rem;
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .forgot-brand-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 15s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.1); opacity: 0.3; }
    }
    
    .brand-content {
        position: relative;
        z-index: 1;
        text-align: center;
        max-width: 500px;
    }
    
    .brand-logo {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }
    
    .brand-logo i {
        font-size: 3rem;
        color: white;
    }
    
    .brand-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 0 2px 20px rgba(0,0,0,0.2);
    }
    
    .brand-subtitle {
        font-size: 1.125rem;
        opacity: 0.95;
        line-height: 1.6;
        margin-bottom: 2rem;
    }
    
    .brand-features {
        display: grid;
        gap: 1rem;
        text-align: left;
        margin-top: 3rem;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        backdrop-filter: blur(10px);
    }
    
    .feature-icon {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    
    /* Right Side - Form */
    .forgot-form-section {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem;
        background: #ffffff;
        position: relative;
    }
    
    .language-switcher {
        position: absolute;
        top: 2rem;
        right: 2rem;
        z-index: 10;
    }
    
    .forgot-form-container {
        width: 100%;
        max-width: 480px;
    }
    
    .form-header {
        margin-bottom: 2.5rem;
    }
    
    .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }
    
    .form-subtitle {
        font-size: 1rem;
        color: #64748b;
    }
    
    .forgot-form {
        margin-top: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: #334155;
        margin-bottom: 0.5rem;
    }
    
    .form-input {
        width: 100%;
        min-height: 48px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        transition: all 0.2s;
        background: #f8fafc;
    }
    
    .form-input:focus {
        outline: none;
        border-color: var(--rz-primary);
        background: #ffffff;
        box-shadow: 0 0 0 3px var(--rz-primary-lighter);
    }
    
    .submit-button {
        width: 100%;
        min-height: 52px;
        font-size: 1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .back-to-login {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e2e8f0;
        color: #64748b;
    }
    
    .back-to-login a {
        color: var(--rz-primary);
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }
    
    .back-to-login a:hover {
        color: var(--rz-primary-dark);
    }
    
    .alert-success {
        padding: 1rem;
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 10px;
        color: #15803d;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .alert-icon {
        font-size: 1.25rem;
    }
    
    /* Responsive Design */
    @@media (max-width: 1024px) {
        .forgot-brand-section {
            display: none;
        }
        
        .forgot-form-section {
            flex: 1;
        }
    }
    
    @@media (max-width: 640px) {
        .forgot-form-section {
            padding: 2rem 1.5rem;
        }
        
        .form-title {
            font-size: 1.5rem;
        }
        
        .language-switcher {
            top: 1rem;
            right: 1rem;
        }
    }
</style>

<div class="forgot-wrapper">
    <!-- Left Side - Branding -->
    <div class="forgot-brand-section">
        <div class="brand-content">
            <div class="brand-logo">
                <i class="fas fa-lock"></i>
            </div>
            
            <h1 class="brand-title">@Localizer["BrandTitle"]</h1>
            <p class="brand-subtitle">
                @Localizer["BrandSubtitle"]
            </p>
            
            <div class="brand-features">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <strong>@Localizer["FeatureCheckEmailTitle"]</strong><br/>
                        @Localizer["FeatureCheckEmailDescription"]
                    </div>
                </div>
                
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <strong>@Localizer["FeatureQuickProcessTitle"]</strong><br/>
                        @Localizer["FeatureQuickProcessDescription"]
                    </div>
                </div>
                
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div>
                        <strong>@Localizer["FeatureSecureResetTitle"]</strong><br/>
                        @Localizer["FeatureSecureResetDescription"]
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right Side - Form -->
    <div class="forgot-form-section">
        <!-- Language Switcher - Top Right -->
        <div class="language-switcher">
            <LanguageSwitcher />
        </div>
        
        <div class="forgot-form-container">
            <div class="form-header">
                <h2 class="form-title">@Localizer["ForgotPasswordTitle"]</h2>
                <p class="form-subtitle">@Localizer["ForgotPasswordSubtitle"]</p>
            </div>
            
            @if (_emailSent)
            {
                <div class="alert-success">
                    <span class="alert-icon">âœ“</span>
                    <div>
                        <strong>@Localizer["ResetLinkSent"]</strong>
                    </div>
                </div>
            }
            
            <RadzenTemplateForm TItem="ForgotPasswordModel" Data="@_model" Submit="@OnSubmit" class="forgot-form">
                <RadzenStack Gap="1.5rem">
                    <div class="form-group">
                        <label class="form-label">@Localizer["EmailLabel"]</label>
                        <RadzenTextBox Name="email" 
                                     @bind-Value="@_model.Email"
                                     Placeholder="@Localizer["EmailPlaceholder"]"
                                     Style="width: 100%; min-height: 48px; font-size: 16px;"
                                     Disabled="@_emailSent" />
                        <RadzenRequiredValidator Component="email" Text="@Localizer["EmailLabel"]" />
                    </div>
                    
                    @if (!_emailSent)
                    {
                        <RadzenButton ButtonType="ButtonType.Submit" 
                                    ButtonStyle="ButtonStyle.Primary"
                                    Size="ButtonSize.Large" 
                                    Style="width: 100%; min-height: 52px;"
                                    IsBusy="@_isLoading">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem" JustifyContent="JustifyContent.Center">
                                <i class="fas fa-envelope"></i>
                                <span>@Localizer["SendResetLinkButton"]</span>
                            </RadzenStack>
                        </RadzenButton>
                    }
                    else
                    {
                        <RadzenButton ButtonStyle="ButtonStyle.Secondary"
                                    Size="ButtonSize.Large" 
                                    Style="width: 100%; min-height: 52px;"
                                    Click="@(() => _emailSent = false)">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem" JustifyContent="JustifyContent.Center">
                                <i class="fas fa-redo"></i>
                                <span>@Localizer["SendAgain"]</span>
                            </RadzenStack>
                        </RadzenButton>
                    }
                </RadzenStack>
            </RadzenTemplateForm>
            
            <div class="back-to-login">
                <i class="fas fa-arrow-left" style="vertical-align: middle; margin-right: 0.5rem;"></i>
                <a href="/login">@Localizer["BackToLogin"]</a>
            </div>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordModel _model = new();
    private bool _isLoading = false;
    private bool _emailSent = false;

    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }

    private async Task OnSubmit(ForgotPasswordModel model)
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            // Simulate API call
            await Task.Delay(1500);

            // TODO: Call your password reset API here
            // await AuthService.SendPasswordResetEmailAsync(model.Email);

            _emailSent = true;

            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Success,
                Summary = "Email Sent",
                Detail = "Password reset instructions have been sent to your email address.",
                Duration = 5000
            });
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Failed to Send Email",
                Detail = ex.Message,
                Duration = 4000
            });
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
}

